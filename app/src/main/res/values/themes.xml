<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewDecompile" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#000000</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NewDecompile.Lottie">

        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
        <item name="lottie_rawRes">@raw/thankyou</item></style>


    <style name="app_calculated_value_large_text_style">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/app_theme_dark_color</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:freezesText">true</item>
    </style>

    <style name="app_large_button_style">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#ffffff</item>

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="app_calculated_value_medium_text_style" parent="@style/app_calculated_value_large_text_style">
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="native_visible" >
        <item name="android:visibility">gone</item>
    </style>
</resources>